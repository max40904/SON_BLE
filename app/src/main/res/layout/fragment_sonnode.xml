<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="GUI.SONNodeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mode"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Gateway Mode"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Blank"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/blank4"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blank5"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/receiveNode"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Receive Node"
                    android:textSize="24sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/blank3"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blank7"
                    android:layout_width="10dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/sendNode"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Send Node"
                    android:textSize="24sp" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tschduleTextView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/holo_red_light"
            android:gravity="center"
            android:text="Receive TSchdule"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/adNodeTextView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#33acf3"
            android:gravity="center"
            android:text="Advertising"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/recNodeTextView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#2be2b1"
            android:gravity="center"
            android:text="Receving"
            android:textSize="24sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/askJoinTextView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#accb50"
            android:gravity="center"
            android:text="Ask for joining"
            android:textSize="24sp"
            android:visibility="visible" />
    </LinearLayout>

</FrameLayout>
